Random random = new Random();
int number = random.Next(15, 16);
int sum = 0;
int firstMultiple = 3;
int secondMultiple = 5;
Console.WriteLine($"Ваше случайное число {number}") ;

for (int i = 0; i <= number; i++)
{
 if (i % firstMultiple == 0 || i % secondMultiple == 0)
  {
    sum += i;
  }

}

Console.WriteLine(sum);
