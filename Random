Random random = new Random();
int number = random.Next(15, 16);
int sum;
int sumFirstMultiple = 0;
int sumSecondMultiple = 0;
int firstMultiple = 3;
int secondMultiple = 5;
Console.WriteLine($"Ваше случайное число {number}") ;

for (int i = 0; i <= number; i++)
{
  if (i % firstMultiple == 0)
  {
    sumFirstMultiple += i;
  }  
  else if (i % firstMultiple == i % secondMultiple)
  {
    continue;
  }  
  else if (i % secondMultiple == 0)
  {
    sumSecondMultiple += i;
  }
}

sum = sumFirstMultiple + sumSecondMultiple;
Console.WriteLine($"Сумма чисел кратных {firstMultiple} и {secondMultiple} равна {sum}.");
