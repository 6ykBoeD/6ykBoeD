        static void Main(string[] args)
        {
            string[] name = { };
            string[] post = { };
            bool isWork = true;

            while (isWork)
            {
                Console.WriteLine("Выберите нужное действие : \n 1 - Добавить досье\n 2 - Вывести все досье\n 3 - Удалить досье\n 4 - Поиск по фамилии\n 5 - Выход");
                string inputUser = Console.ReadLine();
                switch (inputUser)
                {
                    case "1":
                        AddDossier(ref name ,ref post);
                        break;

                    case "2":
                        OutputDossier(name , post);
                        break;

                    case "3":
                        DeleteDossier(ref name ,ref post);
                        break;

                    case "4":
                        SearchName(name, post);
                        break;

                    case "5":
                        isWork = false;
                        break;

                    default:
                        Console.WriteLine("Нет такого значения.Попробуйте заново");
                        break;
                }
            }
        }
        static string[] AddInfo(string[] info, string newInfo)
        {
            string[] tempArray = new string[info.Length + 1];

            for (int i = 0; i < info.Length; i++)
            {
                tempArray[i] = info[i];
            }

            info = tempArray;
            info[info.Length - 1] = newInfo;
            return info;
        }

        static void AddDossier(ref string[] name ,ref string[] post)
        {
            Console.WriteLine("Введите ФИО работника :");
            string inputFullName = Console.ReadLine();
            name = AddInfo(name, inputFullName);

            Console.WriteLine("Введите должность работника :");
            string inputPost = Console.ReadLine();
            post = AddInfo(post, inputPost);
        }
        
        static void OutputDossier(string[] name , string[] post)
        {
            int numberPosition = 0;

            if(name.Length == 0)
            {
                Console.WriteLine("Данные отсутствуют\n");
            }

            for (int i = 0; i < name.Length; i++)
            {
                numberPosition++;
                Console.WriteLine($"{numberPosition}-{name[i]} должность {post[i]}.\n") ;
            }          
        }

        static string[] DecreaseArray(ref string[] info , int index)
        {
            string[] tempArray = new string[info.Length - 1];
            
            for (int i = 0; i < index; i++)
            {
                tempArray[i] = info[i];
            }
            
            for (int i = index; i < tempArray.Length; i++)
            {
                tempArray[i] = info[i + 1];
            }
            
            return info = tempArray;
        }

        static void DeleteDossier(ref string[] name ,ref string[] post)
        {
            bool isWork = true;

            while (isWork)
            {
                Console.WriteLine("Укажите номер досье которое хотите удалить :\n");
                int numberDossier = Convert.ToInt32(Console.ReadLine()) - 1;

                if (numberDossier > name.Length || numberDossier < 0)
                {
                    Console.WriteLine("Такого номера нет , попробуйте заново\n");
                }
                else
                {
                    name = DecreaseArray(ref name, numberDossier);
                    post = DecreaseArray(ref post, numberDossier);
                    Console.WriteLine("Досье удалено\n");
                    isWork = false;
                }
            }
        }

        static void SearchName(string[] name, string[] post)
        {
            int numberDossier = 0;
            bool isWork = true;

            if (name.Length == 0)
            {
                Console.WriteLine("База данных не заполнена\n");
                isWork = false;
            }

            while (isWork)
            {
                Console.Write("Поиск :");
                string searchName = Console.ReadLine();

                for (int i = 0; i < name.Length; i++)
                {
                    numberDossier++;

                    if (name[i] == searchName)
                    {
                        Console.WriteLine($"Сотрудник {name[i]} под номером {numberDossier} работает {post[i]}");
                    }
                    else
                    {
                        Console.WriteLine("Такой сотрудник не найден");
                    }


                    bool isRepeat = true;

                    while (isRepeat)
                    {
                        Console.WriteLine("Хотите продолжить ? да/нет");
                        string inputUser = Console.ReadLine();

                        switch (inputUser.ToLower())
                        {
                            case "да":
                                break;

                            case "нет":
                                isWork = false;
                                isRepeat = false;
                                break;

                            default:
                                Console.WriteLine("Такого значения нет попробуйте заново");
                                break;
                        }
                    }
                }
            }
        }
