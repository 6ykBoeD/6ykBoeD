            string password = "123";
            string inputPassword;
            int numberAttempt = 3;
            for (int i = 0; i < numberAttempt; i++)
            {
                Console.Write("Введите пароль :");
                inputPassword = Console.ReadLine();

                if (inputPassword == password)
                {
                    Console.WriteLine("Пряники в шкафу");
                    numberAttempt = 0;
                }
                else
                {
                    Console.WriteLine($"Попыток у вас осталось {numberAttempt - i -1}");
                }
            } 
