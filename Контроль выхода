Console.WriteLine("Мир в опасности, введите секретное слово : ");

string secretWord = Console.ReadLine();

while (secretWord != "exit")
{
  Console.WriteLine("Мир в опасности, введите секретное слово : ");
  string exit = Console.ReadLine();
                
  if( exit == "exit" ) 
  {
     break;
  }
                
}

Console.WriteLine("Вы спасли мир");
