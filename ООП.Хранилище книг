      using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.IO;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Repository repositoryBook = new Repository();
            bool isRepeat = true;

            while (isRepeat)
            {
                Console.WriteLine("1 - для добвление новой книги\n2 - показать книги по указаному параметру\n3 - показать все книги \n4 - убрать книгу\n5 - выход");

                switch (Console.ReadLine())
                {
                    case "1":
                        repositoryBook.AddBook();
                        break;

                    case "2":
                        repositoryBook.SortBook();
                        break;

                    case "3":
                        repositoryBook.ShowBooks();
                        break;

                    case "4":
                        repositoryBook.DeleteBook();
                        break;

                    case "5":
                        isRepeat = false;
                        break;
                }

                Console.WriteLine("\nНижмите любую клавишу");
                Console.ReadKey();
                Console.Clear();
            }
        }
    }

    class Book
    {
        public string TitleBook { get; private set; }
        public string Author { get; private set; }
        public string YearRelease { get; private set; }

        public Book(string titleBook, string author, string yearRelease)
        {
            TitleBook = titleBook;
            Author = author;
            YearRelease = yearRelease;
        }
    }

    class Repository
    {
        private List<Book> _books = new List<Book>();

        public void AddBook()
        {
            Console.WriteLine("Введите название книги :");
            string getTitleBook = Console.ReadLine();
            Console.WriteLine("Кто автор книги :");
            string getAuthorBook = Console.ReadLine();
            Console.WriteLine("В каком году книгу издали :");
            string getYearRelease = Console.ReadLine();

            _books.Add(new Book(getTitleBook, getAuthorBook, getYearRelease));
        }

        public void SortBook()
        {
            Console.WriteLine("Введите название/автора/год книги");
            string showBookBy = Console.ReadLine();

            foreach (var book in _books)
            {
                if (book.TitleBook == showBookBy || book.Author == showBookBy || book.YearRelease == showBookBy)
                {
                    Console.WriteLine(book.TitleBook + " " + book.Author + " " + book.YearRelease);
                }
                else
                {
                    Console.WriteLine("Таких книг нет");
                }
            }
        }

        public void DeleteBook()
        {
            Console.WriteLine("Введите название книги которую хотите убрать :");
            string titleBook = Console.ReadLine();

            for (int i = 0; i < _books.Count; i++)
            {
                if (_books[i].TitleBook == titleBook)
                {
                    _books.RemoveAt(i);
                }
            }
        }

        public void ShowBooks()
        {
            foreach (var book in _books)
            {
                Console.WriteLine(book.TitleBook + " " + book.Author + " " + book.YearRelease);
            }
        }

    }
}

