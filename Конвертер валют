            float balanceRub = 10000;
            float balanceUsd = 200;
            float balanceEuro = 50;
            int oneUsdInRub = 60;
            int oneEuroInrub = 70;
            float oneUsdInEuro = 0.8f;
            float rubInUsd;
            float rubInEuro;
            float numberRub;
            float numberUsd;
            float numberEuro;
            int userInput;
            string retry = "да";
            
            while(retry == "да")
            {
                Console.WriteLine($"На вашем балансе {balanceRub} рублей , {balanceUsd} долларов , {balanceEuro} евро");
                Console.WriteLine("Какую вылюту хотите обменять :");
                Console.WriteLine("1 - что бы обменять рубли на доллары");
                Console.WriteLine("2 - что бы обменять рубли на евро");
                Console.WriteLine("3 - что бы обменять доллары на рубли");
                Console.WriteLine("4 - что бы обменять евро на рубли");
                Console.WriteLine("5 - что бы обменять доллары на евро");
                Console.WriteLine("6 - что бы обменять евро на доллары");
                userInput = Convert.ToInt32(Console.ReadLine());

                switch (userInput)
                {
                    case 1:
                        Console.WriteLine("Какое количество рублей вы хотите обменять:");
                        numberRub = Convert.ToSingle(Console.ReadLine());
                        if (balanceRub > numberRub)
                        {
                            balanceRub -= numberRub;
                            balanceUsd += numberRub / oneUsdInRub;
                        }
                        else
                        {
                            Console.WriteLine($"Для данной операции у вас не достает {numberRub - balanceRub} рублей на счете.");
                        }
                        break;
                    case 2:
                        Console.WriteLine("Какое количество рублей вы хотите обменять:");
                        numberRub = Convert.ToSingle(Console.ReadLine());
                        if (balanceRub > numberRub)
                        {
                            balanceRub -= numberRub;
                            balanceEuro += numberRub / oneEuroInrub;
                        }
                        else
                        {
                            Console.WriteLine($"Для данной операции у вас не достает {numberRub - balanceRub} рублей на счете.");
                        }
                        break;
                    case 3:
                        Console.WriteLine("Какое количество долларов вы хотите обменять:");
                        numberUsd = Convert.ToSingle(Console.ReadLine());
                        if (balanceUsd > numberUsd)
                        {
                            balanceUsd -= numberUsd;
                            balanceRub += numberUsd * oneUsdInRub;
                        }
                        else
                        {
                            Console.WriteLine($"Для данной операции у вас не достает {numberUsd - balanceUsd} рублей на счете.");
                        }
                        break;
                    case 4:
                        Console.WriteLine("Какое количество евро вы хотите обменять:");
                        numberEuro = Convert.ToSingle(Console.ReadLine());
                        if (balanceEuro > numberEuro)
                        {
                            numberEuro -= numberEuro;
                            balanceRub += numberEuro * oneEuroInrub;
                        }
                        else
                        {
                            Console.WriteLine($"Для данной операции у вас не достает {numberEuro - balanceEuro} рублей на счете.");
                        }
                        break;
                    case 5:
                        Console.WriteLine("Какое количество долларов вы хотите обменять:");
                        numberUsd = Convert.ToSingle(Console.ReadLine());
                        if (balanceUsd > numberUsd)
                        {
                            balanceUsd -= numberUsd;
                            balanceEuro += numberUsd * oneUsdInEuro;
                        }
                        else
                        {
                            Console.WriteLine($"Для данной операции у вас не достает {numberUsd - balanceUsd} рублей на счете.");
                        }
                        break;
                    case 6:
                        Console.WriteLine("Какое количество евро вы хотите обменять:");
                        numberEuro = Convert.ToSingle(Console.ReadLine());
                        if (balanceEuro > numberEuro)
                        {
                            numberEuro -= numberEuro;
                            balanceUsd += numberEuro / oneEuroInrub;
                        }
                        else
                        {
                            Console.WriteLine($"Для данной операции у вас не достает {numberEuro - balanceEuro} рублей на счете.");
                        }
                        break;
                    default:
                        Console.WriteLine("Попробуйте снова");
                        break;
                }
                Console.WriteLine($"Ваш баланс состовляет {balanceRub} рублей , {balanceUsd} долларов , {balanceEuro} евро");
                Console.WriteLine("Хотите продолжить - да/нет");
                retry = Console.ReadLine();                
            }  
            
              
