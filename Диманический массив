            int[] array = new int[1];
            int[] advancedArray = new int[array.Length + 1];
            int inputNumber;
            string userInput;
            int sum = 0;
            bool isWork = true;

            while (isWork)
            {
                Console.WriteLine("Выберите действие.Введите\n " +
                    "\n1 - для ввода числа" +
                    "\nsum - для сложения всех введеных чисел" +
                    "\nexit - для выхода из программы");
                userInput = Console.ReadLine();

                switch (userInput)
                {
                    case "1":
                        Console.WriteLine("Введите число :");
                        inputNumber = Convert.ToInt32(Console.ReadLine());

                        for (int i = 0; i < array.Length; i++)
                        {
                            array[i] = inputNumber; 
                            advancedArray[i] = array[i];
                        }
                        break;

                    case "sum":

                        for (int i = 0; i < array.Length; i++)
                        {
                            sum += array[i];
                        }

                        Console.WriteLine(sum);
                        break;

                    case "exit":
                        isWork = false;
                        break;

                   default:
                        Console.WriteLine("\nНеверное значение ,попробуйте снова\n");
                        break;
                }

                array = advancedArray;   
