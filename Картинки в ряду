int numberPictures = 52;
int numberPicturesinRow = 3;
int numberRow;
int remainingPictures;

numberRow = numberPictures / numberPicturesInRow;
remainingPictures = numberPictures % numberPicturesInRow;

Console.WriteLine($"Полностью заполненых рядов {numberRow}, картинок осталось {remainingPictures}");
