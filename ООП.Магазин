using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.IO;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Seller seller = new Seller();
            Buyer buyer = new Buyer();
            buyer.AddMoney();
            bool isWork = true;

            while (isWork)
            {
                seller.ShowInfo();
                buyer.ShowInfo();
                Console.SetCursorPosition(0, 10);
                Console.WriteLine($"1 - Добавить товар в магазин\n2 - Положить в корзину\n3 - Совершить покупку\n4 - Убрать товар из корзины\n5 - выход\n");
                string inputUser = Console.ReadLine();

                switch (inputUser)
                {
                    case "1":
                        seller.AddProducts();
                        break;

                    case "2":
                        buyer.PutInBasket(seller);
                        break;

                    case "3":
                        buyer.BuyProducts();
                        break;

                    case "4":
                        buyer.RemoveProduct();
                        break;

                    case "5":
                        isWork = false;
                        break;
                }

                Console.WriteLine("\nНижмите любую клавишу");
                Console.ReadKey();
                Console.Clear();
            }
        }
    }

    class Product
    {
        public string Name { get; private set; }
        public int Price { get; private set; }

        public Product(string name, int price)
        {
            Name = name;
            Price = price;
        }
    }

    class Cell
    {
        public int Count { get; private set; }

        public Cell( int count)
        {
            Count = count;
        }

        public void DecreaseCount(int count)
        {
            Count -= count;
        }

        public void IncreaseCount(int count)
        {
            Count += count;
        }
    }

    class Seller
    {
        private List<Product> _products = new List<Product>() { new Product("Хлеб", 25), new Product("Сок", 50) };

        private List<Cell> _cells = new List<Cell>() { new Cell(1000),new Cell(500)};

        public int Account { get; private set; }

        public void AddProducts()
        {
            Console.WriteLine("Название продукта :\n");
            string name = Console.ReadLine();

            Console.WriteLine("Введите цену :\n");
            int price = GetNumber();

            Console.WriteLine("Введиет количество :\n");
            int inputCount = GetNumber();

            _products.Add(new Product(name, price));
            _cells.Add(new Cell(inputCount));
        }

        public void GetProduct(out Product name ,string nameProduct,int count)
        {
            name = null;
            
            if (_products.Count > 0)
            {
                for (int i = 0; i < _products.Count; i++)
                {
                    if (_products[i].Name == nameProduct)
                    {
                        if (_cells[i].Count >= count)
                        {
                            name = _products[i];
                            _cells[i].DecreaseCount(count);
                        }
                        else
                        {
                            Console.WriteLine("В магазине недостаточно товаров");
                        }
                    }
                }
            }
            else
            {
                Console.WriteLine("В магазине нет товаров");
            }
        }

        public void ShowInfo()
        {
            Console.WriteLine("Магазин");
            Console.WriteLine($"Касса = {Account}");

            for (int i = 0; i < _products.Count; i++)
            {
                Console.WriteLine(_products[i].Name + " за " + _products[i].Price + " рубля в количестве " + _cells[i].Count);
            }
        }

        private int GetNumber()
        {
            bool isRepeat = true;

            while (isRepeat)
            {
                bool isSuccess = int.TryParse(Console.ReadLine(), out int count);

                if (isSuccess)
                {
                    return count;
                }
                else
                {
                    Console.WriteLine("Неверное значение");
                }
            }

            return 0;
        }
    }

    class Buyer
    {
        private List<Product> _basket = new List<Product>();
        private List<Cell>  _cells = new List<Cell> ();
        public int Account { get; private set; }

        public void AddMoney()
        {
            Account = 10000;
        }

        public void PutInBasket(Seller seller)
        {
            Console.WriteLine("Название продукта :");
            string nameProduct = Console.ReadLine();

            Console.WriteLine("Какое количество требуется :");
            int count = GetNumber();

            seller.GetProduct(out Product name, nameProduct, count);

            if(name != null)
            {
                for (int i = 0; i <= _basket.Count; i++)
                {
                    if (_basket.Contains(name))
                    {
                        _cells[i].IncreaseCount(count);
                    }
                    else
                    {
                        _basket.Add(name);
                        _cells.Add(new Cell(count));
                    }
                }
            }
            else
            {
                Console.WriteLine("Такого товара нет");
            }
        }

        public void BuyProducts()
        {
            if(Account >= SumPurchase())
            {
                Account -= SumPurchase();
                Console.WriteLine("Спасибо за покупку.Приходите к нам ещё");
            }
            else
            {
                Console.WriteLine($"У вас недостаточно средств.Не хватает {SumPurchase() - Account} рублей");
            }
        }

        public void RemoveProduct()
        {
            Console.WriteLine("Название продукта который хотите убрать:");
            string nameProduct = Console.ReadLine();

            Console.WriteLine("Сколько хотите убрать :");
            int count = GetNumber();
            
            GetProduct(out Product name,out Cell cell ,nameProduct,count);

            if (name != null)
            {
                if (cell.Count > count)
                {
                    cell.IncreaseCount(count);
                }
                else
                {
                    _basket.Remove(name);
                    _cells.Remove(cell);
                }
            }
            else
            {
                Console.WriteLine("Такого товара нет в корзине");
            }
        }

        public void ShowInfo()
        {
            int positionX = 1;
            Console.SetCursorPosition(50, 0);
            Console.WriteLine("Корзина покупатель");
            Console.SetCursorPosition(50, 1);
            Console.WriteLine($"Баланс на счете покупателя = {Account}");
            

            for (int i = 0; i < _basket.Count; i++)
            {
                Console.SetCursorPosition(50, ++positionX);
                Console.WriteLine(_basket[i].Name +  " в количестве " + _cells[i].Count);
                Console.WriteLine($"Стоимость товаров {SumPurchase()}");
            }
        }

        public void GetProduct(out Product name ,out Cell cell,string nameProduct, int count)
        {
            name = null;
            cell = null;

            if (_basket.Count > 0)
            {
                for (int i = 0; i < _basket.Count; i++)
                {
                    if (_basket[i].Name == nameProduct)
                    {
                        name = _basket[i];
                        cell = _cells[i];
                    }
                }
            }
            else
            {
                Console.WriteLine("В корзине нет товаров");
            }
        }

        private int GetNumber()
        {
            bool isRepeat = true;

            while (isRepeat)
            {
                bool isSuccess = int.TryParse(Console.ReadLine(), out int count);

                if (isSuccess)
                {
                    return count;
                }
                else
                {
                    Console.WriteLine("Неверное значение");
                }
            }

            return 0;
        }

        private int SumPurchase()
        {
            int sumPrice=0;

            foreach (var product in _basket)
            {
                sumPrice += product.Price;
            }

            return sumPrice;
        }
    }
}

